.side-bar__user-name
  .side-bar__user-name__top-items
    .ide-bar__user-name__top-items__name
      = current_user.name
    .ide-bar__user-name__top-items__icons
      = link_to new_group_path, class:"icons__btn" do
        = icon('fas', 'edit')
      = link_to edit_user_path(current_user), class:"icons__btn" do
        = icon('fas', 'cog')
.side-bar__group-list
  - current_user.groups.each do |group|
    .side-bar__group-list__n
      = link_to group_messages_path(group) do
        .side-bar__group-list__n__group-name
          = group.name
          .side-bar__group-list__n__group-message
            = group.show_last_message
